<Page x:Class="NR2K3_Season_Manager.Views.LoadSeriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NR2K3_Season_Manager.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadSeriesPage"
      DataContext="{Binding Path=LoadSeriesPageViewModel, Source={StaticResource Locator}}">

    <Grid x:Name="LayoutRoot">
        <materialDesign:ColorZone Mode="Accent" Padding="16">
            <StackPanel Orientation="Horizontal">
                <ToggleButton Style="{DynamicResource MaterialDesignHamburgerToggleButton}" />
                <TextBlock VerticalAlignment="Center" Margin="16 0 0 0">NR2003 Season Manager</TextBlock>
            </StackPanel>
        </materialDesign:ColorZone>
        <materialDesign:Card Padding="32" Margin="10,94,22,0">
            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="Load Series"/>
        </materialDesign:Card>
        <materialDesign:Card Padding="32" Margin="10,206,22,0">
            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="New Series"/>
        </materialDesign:Card>

    </Grid>
</Page>
